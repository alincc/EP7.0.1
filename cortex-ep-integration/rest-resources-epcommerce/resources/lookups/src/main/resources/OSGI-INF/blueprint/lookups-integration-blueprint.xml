<?xml version="1.0" encoding="UTF-8"?>
<blueprint
		xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<!-- import services -->
	<reference id="resourceOperationContext"
			interface="com.elasticpath.rest.resource.ResourceOperationContext"/>

	<reference id="itemRepository"
		interface="com.elasticpath.rest.resource.integration.epcommerce.repository.item.ItemRepository" />

	<reference id="productSkuRepository"
		interface="com.elasticpath.rest.resource.integration.epcommerce.repository.sku.ProductSkuRepository" />

	<!-- identifiers -->
	<service
			ref="stringListIdentifierTransformer"
			interface="com.elasticpath.rest.id.transform.IdentifierTransformer">
		<service-properties>
			<entry key="uri-part" value="lookups.batch-id"/>
		</service-properties>
	</service>

	<!-- export services -->
	<service
		ref="itemLookupLookupStrategy"
		interface="com.elasticpath.rest.resource.lookups.integration.ItemLookupLookupStrategy"/>
</blueprint>